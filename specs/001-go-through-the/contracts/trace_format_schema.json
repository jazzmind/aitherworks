{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://aitherworks.game/schemas/transformer_trace.json",
  "title": "TransformerTrace",
  "description": "Pre-generated transformer execution data for visualization",
  "type": "object",
  "required": ["trace_version", "model", "prompt", "tokens", "layers", "metadata"],
  "properties": {
    "trace_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+$",
      "description": "Trace format version (e.g., '1.0')"
    },
    "model": {
      "type": "string",
      "description": "Model name (e.g., 'gpt2-small', 'llama-7b')"
    },
    "prompt": {
      "type": "string",
      "minLength": 1,
      "description": "Input prompt text"
    },
    "tokens": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "description": "Array of token strings"
    },
    "layers": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["layer_idx", "attention"],
        "properties": {
          "layer_idx": {
            "type": "integer",
            "minimum": 0
          },
          "attention": {
            "type": "object",
            "required": ["heads"],
            "properties": {
              "heads": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "object",
                  "required": ["head_idx", "weights_compressed"],
                  "properties": {
                    "head_idx": {
                      "type": "integer",
                      "minimum": 0
                    },
                    "weights_compressed": {
                      "type": "array",
                      "items": {
                        "type": "integer",
                        "minimum": 0,
                        "maximum": 255
                      },
                      "description": "Flattened attention matrix, uint8 encoded (0-255). Length = seq_len * seq_len"
                    }
                  }
                }
              }
            }
          },
          "logits_topk": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["position", "top_tokens"],
              "properties": {
                "position": {
                  "type": "integer",
                  "minimum": 0,
                  "description": "Token position in sequence"
                },
                "top_tokens": {
                  "type": "array",
                  "minItems": 1,
                  "maxItems": 10,
                  "items": {
                    "type": "object",
                    "required": ["token_id", "probability"],
                    "properties": {
                      "token_id": {
                        "type": "integer",
                        "minimum": 0
                      },
                      "probability": {
                        "type": "number",
                        "minimum": 0.0,
                        "maximum": 1.0
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "required": ["generated_date", "generator_version", "model_config"],
      "properties": {
        "generated_date": {
          "type": "string",
          "format": "date-time"
        },
        "generator_version": {
          "type": "string",
          "description": "Version of trace generation tool"
        },
        "model_config": {
          "type": "object",
          "required": ["n_layers", "n_heads", "d_model"],
          "properties": {
            "n_layers": {
              "type": "integer",
              "minimum": 1,
              "description": "Number of transformer layers"
            },
            "n_heads": {
              "type": "integer",
              "minimum": 1,
              "description": "Number of attention heads per layer"
            },
            "d_model": {
              "type": "integer",
              "minimum": 1,
              "description": "Model dimensionality"
            },
            "vocab_size": {
              "type": "integer",
              "minimum": 1
            }
          }
        }
      }
    }
  }
}

